<resources>
   <style name="CheckoutModal" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowMinWidthMajor">98%</item>
        <item name="android:windowMinWidthMinor">98%</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/CheckoutModalTitle</item>
    </style>
    <style name="CheckoutModalTitle">
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@color/colorOffWhite</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ButtonPrimary" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
